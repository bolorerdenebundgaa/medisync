# Application
APP_NAME=MediSync
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=medisync
DB_USERNAME=your_username
DB_PASSWORD=your_password

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_EXPOSE_HEADERS=
CORS_MAX_AGE=86400

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=uploads

# Email
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@medisync.com
MAIL_FROM_NAME=MediSync

# SMS (Optional)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_account_sid
SMS_AUTH_TOKEN=your_auth_token
SMS_FROM_NUMBER=your_twilio_number

# Payment Gateway (Optional)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Cache
CACHE_DRIVER=file
CACHE_PREFIX=medisync_
CACHE_TTL=3600

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security
ENCRYPTION_KEY=your_encryption_key
PASSWORD_SALT=your_password_salt

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_MAX_FILES=30

# Features
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false

# Rate Limiting
RATE_LIMIT_ATTEMPTS=60
RATE_LIMIT_MINUTES=1

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_IPS=127.0.0.1

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# External Services (Optional)
GOOGLE_MAPS_API_KEY=
CLOUDINARY_URL=
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=

# Backup
BACKUP_ENABLED=true
BACKUP_PATH=backups
BACKUP_NOTIFICATION_EMAIL=admin@medisync.com

# Queue
QUEUE_CONNECTION=sync
QUEUE_NAME=default

# Redis (Optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Debug (Development Only)
QUERY_DEBUG=true
ERROR_TRACE=true
